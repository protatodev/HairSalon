@{
    Layout = "_Layout";
}


<div class="row">
    <div class="col-sm-12">
        <div class="jumbotron">
            <h1>Happy's Hair Salon</h1>
            <p>Cutting edge hair products and services!</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <form action="/clients" method="post">
            <div class="form-group">
                <label for="name">Enter Client Name</label>
                <input type="text" id="name" name="name" required/>
            </div>
            <div class="form-group">
                <label for="name">Select A Stylist</label>
                <select name="stylist" required>
                    @foreach (var stylist in Model)
                    {
                        <option value="@stylist.Id">@stylist.Name</option>
                    }
                </select>
            </div>
            <button class="btn btn-primary" type="submit">Add</button>
            <a href="/" type="button" class="btn btn-primary">Return to Home</a>
        </form>
    </div>
</div>
