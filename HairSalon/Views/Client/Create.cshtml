@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <form action="/view-all-clients" method="post">
            <div class="form-group">
                <label for="name">Enter Client Name</label>
                <input type="text" id="name" name="name" />
            </div>
            <div class="form-group">
                <label for="name">Select A Stylist</label>
                <select name="stylist">
                    @foreach(var stylist in Model)
                    {
                        <option value="@stylist.Id">@stylist.Name</option>
                    }
                </select>
            </div>
            <button class="btn btn-primary" type="submit">Add</button>
            <a href="/" type="button" class="btn btn-primary">Return to Home</a>
        </form>
    </div>
</div>
