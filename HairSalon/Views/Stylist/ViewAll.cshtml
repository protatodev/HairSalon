@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <div class="jumbotron">
            <h1>Character Database</h1>
        </div>
        <a href="/add-character" type="button" class="btn btn-primary">Add New Character</a>
        <a href="/" type="button" class="btn btn-primary">Return to Home</a>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h3>Current Characters:</h3>
        @{
            foreach (var character in Model)
            {
                <h4>@character.Name</h4>
                <p>@character.GetClass().Name</p>
                <p>@character.Level</p>
                <a href="/character/@character.Id/update" type="button" class="btn btn-primary">Edit</a>
                <a href="/character/@character.Id/delete" type="button" class="btn btn-danger">Delete</a>
                <hr />
            }
        }
    </div>
</div>
