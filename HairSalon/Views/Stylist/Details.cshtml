@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <a href="/stylist/add" type="button" class="btn btn-success">Add New Stylist</a>
        <a href="/" type="button" class="btn btn-primary">Return to Home</a>
    </div>
</div>
<hr />
<div class="row">
    <div class="col-sm-12">
        <h3>@Model.Name's Page</h3>
        <hr /><br />
        <h5><strong>Clients:</strong></h5>
        @foreach (var client in Model.GetClients())
        {
            <a href="~/client/@client.Id/details"><p class="stylist-paragraph">@client.Name</p></a> <a href="/stylist/@Model.Id/client/@client.Id/remove" class="btn-sm btn-danger">Remove</a><br />
        }
        <hr />
        <h5><strong>Specialties:</strong></h5>
        @foreach (var specialty in Model.GetSpecialties())
        {
            <a href="~/specialty/@specialty.Id/details"><p class="stylist-paragraph">@specialty.Name</p></a> <a href="/stylist/@Model.Id/specialty/@specialty.Id/remove" class="btn-sm btn-danger">Remove</a><br />
        }
        <hr />
        <h5><strong>Experience:</strong></h5>
        <p>@Model.Experience</p><br />
        <hr />
        <a href="/stylist/@Model.Id/update" type="button" class="btn btn-primary">Edit</a>
        <a href="/stylist/@Model.Id/delete" type="button" class="btn btn-danger">Delete</a>
        <hr />
    </div>
</div>
