@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-12">
        <div class="jumbotron">
            <h1>@Model.Name</h1>
        </div>
        <a href="/stylist/add" type="button" class="btn btn-primary">Add New Stylist</a>
        <a href="/" type="button" class="btn btn-primary">Return to Home</a>
    </div>
</div>
<div class="row">
    <div class="col-sm-12">
        <h3>@Model.Name's Page</h3>
        <hr /><br />
        <h4>@Model.Name</h4>
        <h5><strong>Clients:</strong></h5>
        @foreach (var client in Model.GetClients())
        {
            <a href="~/client/@client.Id/details"><p>@client.Name</p></a>
        }
        <h5><strong>Specialties:</strong></h5>
        @foreach (var specialty in Model.GetSpecialties())
        {
            <a href="~/specialty/@specialty.Id/details"><p>@specialty.Name</p></a>
        }
        <h5><strong>Experience:</strong></h5>
        <p>@Model.Experience</p>
        <a href="/stylist/@Model.Id/update" type="button" class="btn btn-primary">Edit</a>
        <a href="/stylist/@Model.Id/delete" type="button" class="btn btn-danger">Delete</a>
        <hr />
    </div>
</div>
